  <body>
    <!--header navigation -->
    <header class="the-header clearfix">
      <div class="wrapper">
        <div class="logo">
          <a href="#splash"><img src="https://copair.gitlab.io/with/img/logo.png" alt="COPAIR"></a>
        </div>

        <a class="resToggle">
          <span class="menu-item"></span>
          <span class="menu-item"></span>
          <span class="menu-item"></span>
        </a>
      </div>
      <div class="nav-wrapper">
        <nav class="the-nav">
          <ul>
            <li><a href="#about">What is it?</a></li>
            <% if user_signed_in? %>
              <li><%= link_to "Profile", edit_user_registration_path %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Sign in", user_session_path %></li>
            <% end %>
            <li><a href="#team">Team</a></li>
            <li><a href="#contact">Contact</a></li>
            <li><%= link_to image_tag('beta.png', tile:'We are in Beta', id:'beta') + ' Beta Home' %></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Header & Navigation-->
    <%= yield %>
    <!--Home Footer====-->
    <footer>
      <div class="container container--footer">
        <br />
        <%= link_to image_tag('copairlogo3.svg', alt:'COPAIR', class:'logolnkd' )%>
