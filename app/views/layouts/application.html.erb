  <body>
    <!--header navigation -->
    <header class="the-header clearfix">
      <div class="wrapper">
        <div class="logo">
          <%= link_to image_tag('logo.png', tile:'Copair Logo', alt:'Copair'), root_path %>
        </div>

        <a class="resToggle">
          <span class="menu-item"></span>
          <span class="menu-item"></span>
          <span class="menu-item"></span>
        </a>
      </div>
      <div class="nav-wrapper">
        <nav class="the-nav">
          <ul>
            <% if user_signed_in? %>
              <li><%= link_to "Your info & Settings", edit_user_registration_path %></li>
              <li><%= link_to "Profile", user_path(current_user.id) %></li>
              <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
            <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Sign in", user_session_path %></li>
            <% end %>
            <li><%= link_to image_tag('beta.png', tile:'We are in Beta', id:'beta') + ' Beta Home', root_path %></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Header & Navigation-->
    <%= yield %>

