<section class="splash-session edit-registrations">
  <div class="bg-splash">
    <div class= "container">
      </br></br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <form class="" method="post" action="#">
          <div class="row main" id="first_step" >
            <div class="main-login main-center">
            <h4><%= devise_error_messages! %></h4>
             <h2>Edit:</h2>
             <h4><strong>1. Basic Information</strong></h4>
             <h4><%= link_to '2. Specific main info', '#second_step' %> </h4>
             <h4>3. Skills </h4>
             <h4>4. Goals, Links & Resume</h4></br>
              <div class="form-group">
                <label for="name" class="cols-sm-2 control-label">Your Name</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.text_field :first_name, autofocus: true, class:'form-control', id:'first_name',  placeholder:'Enter your Name' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="name" class="cols-sm-2 control-label">Your last Name</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                    <%= f.text_field :last_name, autofocus: true, class:'form-control', placeholder:'Enter your last Name' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="email" class="cols-sm-2 control-label">Your Email</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                    <%= f.email_field :email, autofocus: true, class:'form-control', placeholder:'Enter your email' %>
                  </div>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>
                </div>
              </div>

              <div class="form-group">
                <label for="username" class="cols-sm-2 control-label">Username</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                    <%= f.text_field :username, autofocus: true, class:'form-control', placeholder:'Enter your Username' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password, class:"cols-sm-2 control-label" %>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                    <%= f.password_field :password, autocomplete: "off", class:'form-control', placeholder:'Enter your Password' %>
                  </div>
                  <% if @minimum_password_length %>
                  <i>(leave blank if you don't want to change it)</i><br />
                  <em>(<%= @minimum_password_length %> characters minimum)<%= "  " %></em>
                  <% end %>
                </div>
              </div>

              <div class="form-group">
                <label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control', placeholder:'Confirm Password' %>
                  </div>
                </div>
              </div>
              <br /><br />
              <h3><a href="#second_step">Keep these changes & continue with Second Step: Specific main info</a></h3>
              <br /><br />
              <h3>Or Just save changes from this step and continue later:</h3>
              <br />
              <div class="actions form-group">
                <%= f.submit "Update & save for now changes", id: 'sign_up', class: 'btn btn-primary btn-lg btn-block login-button' %>
              </div>

              <%= link_to "Back", :back %>
            </div>
          </div> <!-- / row main first_step  /-->
          <br /><br /><br />

          <div class="row main" id="second_step">
            <div class="main-login main-center">
             <h2>Edit:</h2>
             <h4><%= link_to '1. Basic Information', '#first_step' %></h4>
             <h4><strong>2. Specific main info</strong></h4>
             <h4>3. Skills </h4>
             <h4>4. Goals, Links & Resume</h4></br>

                <div class="form-group">
                  <label for="picture" class="cols-sm-2 control-label">Your Picture</label>
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                      <%= f.file_field :picture, autofocus: true, class:'form-control', id:'picture',  placeholder:'Add new picture' %>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label for="contact_preference" class="cols-sm-2 control-label">Contact of Preference/s</label>
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-bullseye fa" aria-hidden="true"></i></span>
                      <%= f.text_field :contact_preference, autofocus: true, class:'form-control', placeholder:'Example: example: whatsapp: +12.. , email: abc..@' %>
                    </div>
                    *Contact will be ONLY shown to your match via request
                  </div>
                </div>

                <div class="form-group">
                  <label for="shared_screen_tool" class="cols-sm-2 control-label">Shared screen tool/s</label>
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-laptop fa" aria-hidden="true"></i></span>
                      <%= f.text_field :shared_screen_tool, autofocus: true, class:'form-control', placeholder:'Example: Teamviewer, Join.me, Skype' %>
                    </div>
                    *In case you didn't use before write: No
                  </div>
                </div>

                <div class="form-group">
                  <label for="fluent_language" class="cols-sm-2 control-label">Fluent language/s</label>
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa-language fa" aria-hidden="true"></i></span>
                      <%= f.text_field :fluent_language, autofocus: true, class:'form-control', placeholder:'example: English, Spanish ...' %>
                    </div>
                  </div>
                </div>

                <div class="actions form-group">
                  <%= f.submit "Update & save for now changes", id: 'sign_up', class: 'btn btn-primary btn-lg btn-block login-button' %>
                </div>
                <%= link_to "Back", :back %>
              </form>
            </div>
          </div>


          <div class="row main" id="second_step">
            <div class="main-login main-center">
              <h3>Cancel my account</h3>

              <p>
                Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary btn-lg btn-block login-button' %>
              </p>
            </div>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</section>
