.main-center
    background: #80CBC4

.next-step-form
    background: #5fb6b6

.btn-primary
    background-color: #eee
    color: #423636
    border: gray

// Remove Text shadow from Contact
#contact form section .input-container label
    text-shadow: none

// remove underline
.the-nav li a
    text-decoration: none

.logolnkd
    max-width: 60px

footer
    padding: 0

.main-login.main-center
    background: url(<%= asset_path('register-cntr.png') %>)

.the-header .logo img:hover
    content: url(<%= asset_path('logo-2.png') %>)
    width: 25%
    max-width: 3rem
    min-width: 3rem

section.splash-thank_you
    color: white
    background: #80CBC4
    background-attachment: fixed
    background-size: cover
    background-repeat: no-repeat
    background: url(<%= asset_path('_DSD2137-CP.jpg') %>)
    font-family: 'Oxygen', sans-serif
    height: 100%

.application_body
    background-attachment: fixed
    background-size: cover
    background: url(<%= asset_path('pattern2.svg') %>)
    height: auto

// many sections separator
.separator
    padding: 7%
    padding-top: 50px

// goals in profile

.term
    background-color: #E7F6F3

// main link color
a
    color: #f9fcff

.index
    background-size: cover
    background-attachment: fixed
    background-repeat: repeat

.show
    background-size: cover
    background-attachment: fixed
    background-repeat: repeat

// space in label-succes#show
.label
    margin: 0.2em

// user index item
.usr-indx
    background-color: #d2e1dd33

.usr-indx:hover
    background-color: #b5edde80

.resToggle
    margin: 14px 0 0

.select2-container--default .select2-selection--multiple .select2-selection__choice
    background-color: #a4d9ef
    border: 1px solid #212121
    border-radius: 4px
    cursor: default
    float: left
    margin-right: 5px
    margin-top: 5px
    padding: 0 5px
    color: black

.select2-container--default .select2-selection--multiple .select2-selection__rendered
    color: black

section
    margin-bottom: 0